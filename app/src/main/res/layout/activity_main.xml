<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo" >

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="288dp"
        android:layout_height="69dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="67dp"
        android:alpha="0"
        android:scaleType="fitCenter"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageViewEmpezar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageViewEmpezar"
        android:layout_width="108dp"
        android:layout_height="44dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="213dp"
        android:alpha="0"
        android:onClick="empezar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogo"
        app:srcCompat="@drawable/inciar" />

    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="54dp"
        android:layout_height="27dp"
        android:layout_marginStart="178dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="50dp"
        android:alpha="0"
        android:text="v0.1.0"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmpezar" />

    <ImageView
        android:id="@+id/imageViewGrid"
        android:layout_width="309dp"
        android:layout_height="318dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="186dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="125dp"
        android:alpha="0"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grid" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridlayout"
        android:layout_width="310dp"
        android:layout_height="317dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="206dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="146dp"
        android:alpha="1"
        android:visibility="visible"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="3">

        <ImageView
            android:id="@+id/imageViewPieza0"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="20dp"
            android:onClick="aparecer"
            android:tag="0"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageViewPieza1"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="20dp"
            android:onClick="aparecer"
            android:tag="1"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageViewPieza2"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:onClick="aparecer"
            android:tag="2"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/imageViewPieza3"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="29dp"
            android:onClick="aparecer"
            android:tag="3"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageViewPieza4"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="29dp"
            android:onClick="aparecer"
            android:tag="4"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageViewPieza5"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="29dp"
            android:onClick="aparecer"
            android:tag="5"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageViewPieza6"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="28dp"
            android:onClick="aparecer"
            android:tag="6"
            android:visibility="invisible"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageViewPieza7"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="28dp"
            android:onClick="aparecer"
            android:tag="7"
            android:visibility="invisible"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/imageViewPieza8"
            android:layout_width="71dp"
            android:layout_height="73dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="28dp"
            android:onClick="aparecer"
            android:tag="8"
            android:visibility="invisible"
            app:layout_column="2"
            app:layout_row="2" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/imageViewReinicio"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginStart="161dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="77dp"
        android:onClick="reiniciar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageViewGrid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAnunciante"
        app:srcCompat="@drawable/reinicio" />

    <TextView
        android:id="@+id/textViewAnunciante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="167dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="38dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/imageViewReinicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDetalles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="43dp"
        android:alpha="0"
        android:text="Conecta las piezas antes que tu oponente! \n Juegalo con tus amigos! "
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/textViewVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGrid" />

    <ImageView
        android:id="@+id/imageViewAbout"
        android:layout_width="89dp"
        android:layout_height="52dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="9dp"
        android:alpha="0"
        android:onClick="informacion"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textViewVersion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewDetalles"
        app:srcCompat="@drawable/sobre" />

    <ImageView
        android:id="@+id/imageViewNombres"
        android:layout_width="144dp"
        android:layout_height="40dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="179dp"
        android:layout_marginBottom="24dp"
        android:alpha="1"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewAbout"
        app:layout_constraintTop_toBottomOf="@+id/textViewVersion"
        app:srcCompat="@drawable/nombres" />

</androidx.constraintlayout.widget.ConstraintLayout>